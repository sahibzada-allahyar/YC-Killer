# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# QuickBooks Configuration
QUICKBOOKS_CLIENT_ID=your_quickbooks_client_id_here
QUICKBOOKS_CLIENT_SECRET=your_quickbooks_client_secret_here
QUICKBOOKS_REFRESH_TOKEN=your_quickbooks_refresh_token_here
QUICKBOOKS_ENVIRONMENT=sandbox # or 'production'
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/callback

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development # or 'production', 'test'

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging Configuration
LOG_LEVEL=info # 'error', 'warn', 'info', 'debug'
LOG_FORMAT=json # or 'simple'

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600 # Time in seconds
CACHE_MAX_SIZE=1000 # Maximum number of items

# Error Reporting
SENTRY_DSN=your_sentry_dsn_here # Optional

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Feature Flags
ENABLE_VOICE_COMMANDS=true
ENABLE_TAX_CALCULATIONS=true
ENABLE_BUDGET_TRACKING=true

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=accounting_agent
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_SSL=false

# Email Configuration (for future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@example.com

# Backup Configuration (for future use)
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily # 'hourly', 'daily', 'weekly'
BACKUP_RETENTION_DAYS=30

# Note: This is an example configuration file.
# Copy this file to .env and replace the placeholder values with your actual configuration.
# Never commit the actual .env file to version control.
