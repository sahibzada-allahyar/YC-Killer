{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "source",
    "declaration": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "source/types"]
  },
  "include": ["source/**/*", "source/ai/.ts"],
  "exclude": ["node_modules", "dist"]
}
