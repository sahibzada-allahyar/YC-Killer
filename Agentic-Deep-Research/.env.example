# AI Provider Configuration
OPENAI_KEY=your_openai_api_key_here
OPENAI_MODEL=o3-mini  # Optional, defaults to o3-mini
OPENAI_ENDPOINT=https://api.openai.com/v1  # Optional, defaults to OpenAI's endpoint
CONTEXT_SIZE=128000  # Optional, maximum context size for prompts

# Knowledge Engine Configuration
FIRECRAWL_KEY=your_firecrawl_api_key_here
FIRECRAWL_BASE_URL=https://api.firecrawl.com  # Optional, defaults to Firecrawl's endpoint

# Runtime Configuration
NODE_ENV=development  # development or production
DEBUG=false  # Optional, enables debug logging

# System Configuration
PARALLEL_EXECUTION_LIMIT=2  # Optional, limits concurrent operations
MAX_DEPTH=3  # Optional, maximum exploration depth
MAX_BREADTH=3  # Optional, maximum exploration width
MIN_SEGMENT_SIZE=140  # Optional, minimum text segment size
